<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appbackground"
    tools:context=".DanismanActivity">

    <FrameLayout
        android:id="@+id/frame1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="270dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:src="@drawable/appbackground2" />

        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:fontFamily="@font/aldrich"
            android:text="Danışman Bilgileri"
            android:textColor="@color/black"
            android:textSize="44sp" />

    </FrameLayout>



        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_margin="20dp"
            android:layout_gravity="center"
            app:layout_constraintTop_toBottomOf="@id/frame1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0."
            android:layout_marginTop="50dp"
            android:backgroundTint="#504F53"
            app:cardCornerRadius="30dp">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/danisman" />

            <TextView
                android:id="@+id/txtDanismanIsim"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="105dp"
                android:text="danismanAdi"
                android:textSize="23sp"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/txtFakulteIsim"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="mail:"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="105dp"
                android:textSize="18sp"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/txtBolum"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Telefon:"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="130dp"
                android:textSize="18sp"
                android:textColor="@color/white" />

        </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>